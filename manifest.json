  "shortcuts": [
    {
      "name": "Claves CGBVP",
      "short_name": "Claves",
      "description": "Acceso rápido a códigos de comunicación",
      "url": "/herramientas/claves/",
      "icons": [{ "src": "assets/icons/shortcut-claves.png", "sizes": "96x96" }]
    },
    {
      "name": "Timer RCP",
      "short_name": "RCP",
      "description": "Cronómetro para reanimación cardiopulmonar",
      "url": "/herramientas/rcp-timer/",
      "icons": [{ "src": "assets/icons/shortcut-rcp.png", "sizes": "96x96" }]
    },
    {
      "name": "Conversor",
      "short_name": "Conversor",
      "description": "Conversor de unidades y medidas",
      "url": "/herramientas/conversor/",
      "icons": [{ "src": "assets/icons/shortcut-conversor.png", "sizes": "96x96" }]
    },
    {
      "name": "Atención Prehospitalaria",
      "short_name": "Prehospitalaria",
      "description": "Protocolos médicos de emergencia",
      "url": "/modulos/atencion-prehospitalaria/",
      "icons": [{ "src": "assets/icons/shortcut-medical.png", "sizes": "96x96" }]
    }
  ],
  "screenshots": [
    {
      "src": "assets/images/screenshot-mobile-1.png",
      "sizes": "540x720",
      "type": "image/png",
      "platform": "narrow",
      "label": "Pantalla principal en móvil"
    },
    {
      "src": "assets/images/screenshot-mobile-2.png",
      "sizes": "540x720",
      "type": "image/png",
      "platform": "narrow",
      "label": "Herramientas de acceso rápido"
    },
    {
      "src": "assets/images/screenshot-desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Vista desktop completa"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "share_target": {
    "action": "/share-target/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "application/pdf", ".txt"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+bomberos",
      "url": "/handle-protocol/?code=%s"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "file_handlers": [
    {
      "action": "/open-file/",
      "accept": {
        "application/pdf": [".pdf"],
        "text/plain": [".txt"],
        "application/json": [".json"]
      }
    }
  ]

}

